// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Role {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  level Int

  @@map("roles")
}

model Permission {
  id          String  @id @map("_id") @db.ObjectId
  code        String  @unique
  description String?

  @@map("permissions")
}
